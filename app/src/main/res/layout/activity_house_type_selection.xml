<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:weightSum="10"
    android:id="@+id/linli"
    tools:context=".HouseTypeSelectionActivity">



    <GridLayout
        android:id="@+id/mainGrid"
        android:rowCount="3"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="14dp">

        <!-- ROW 1  -->
        <!-- COLUMN 1  -->



        <soup.neumorphism.NeumorphCardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_rowWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:id="@+id/lin1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/penk"
                    android:id="@+id/imageView"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />

                <TextView
                    android:textAlignment="center"
                    android:text="Cottage"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </soup.neumorphism.NeumorphCardView>

        <!-- COLUMN 2  -->

        <soup.neumorphism.NeumorphCardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_rowWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:id="@+id/lin2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/sheets"
                    android:id="@+id/imageView2"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />

                <TextView
                    android:textAlignment="center"
                    android:text="SheidHouse"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </soup.neumorphism.NeumorphCardView>



        <!-- ROW 2  -->
        <!-- COLUMN 1  -->

        <soup.neumorphism.NeumorphCardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_rowWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:id="@+id/lin3"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/slab"
                    android:id="@+id/imageView3"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />

                <TextView
                    android:textAlignment="center"
                    android:text="SlabHouse"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/txt3"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </soup.neumorphism.NeumorphCardView>

        <!-- COLUMN 2  -->

        <soup.neumorphism.NeumorphCardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_rowWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:id="@+id/lin4"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/solo"
                    android:id="@+id/imageView4"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />

                <TextView
                    android:textAlignment="center"
                    android:text="Wooden house"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/txt4"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </soup.neumorphism.NeumorphCardView>


        <!-- ROW 3  -->
        <!-- COLUMN 1  -->

        <soup.neumorphism.NeumorphCardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_rowWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:id="@+id/lin5"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/duplex"
                    android:id="@+id/imageView5"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />

                <TextView
                    android:textAlignment="center"
                    android:text="Duplex"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/txt5"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </soup.neumorphism.NeumorphCardView>

        <!-- COLUMN 2  -->

        <soup.neumorphism.NeumorphCardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_rowWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:id="@+id/lin6"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/villa"
                    android:id="@+id/imageView6"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />

                <TextView
                    android:textAlignment="center"
                    android:text="Villa"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/txt6"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </soup.neumorphism.NeumorphCardView>

    </GridLayout>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/proceed"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:text="PROCEED"
        android:backgroundTint="@color/purple_700"
        android:textColor="@color/purple_700"
        app:neumorph_shapeType="basin" />
</LinearLayout>