<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"

    android:layout_marginEnd="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/cardborder2"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/proj_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=" Name"
                android:textSize="20dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/budgetim"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_baseline_policy_24"/>
        </LinearLayout>


        <TextView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/proj_image"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/checkit"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/proj_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project Link"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_below="@+id/user_name"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/proj_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task type"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:id="@+id/book"
            android:text="Select"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>